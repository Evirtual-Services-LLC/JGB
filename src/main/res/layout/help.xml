<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login_back"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:weightSum="4"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="Jorgensen Brooks Group"
       android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/d_din_font"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageHelp"
                android:src="@drawable/logo"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employee, Assistance, Programs"
                android:fontFamily="@font/d_din_font"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@id/imageHelp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need HELP"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/d_din_font"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@id/imageHelp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answered 24 / 365 live"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/d_din_font"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@id/imageHelp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="888-520-5400[toll free]"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/d_din_font"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@id/imageHelp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="520-575-8623[Tucson]"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/d_din_font"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@id/imageHelp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="intake@jorgensenbrooks.com"
                android:fontFamily="@font/d_din_font"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@id/imageHelp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/white"
            android:text="@string/copyright"
            />

    </LinearLayout>



</RelativeLayout>